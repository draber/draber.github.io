  "description": "Spelling Bee Assistant is an add-on for Spelling Bee, the New York Timesâ€™ popular word puzzle",
  "devDependencies": {
    "@markedjs/html-differ": "^3.0.4",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "ajv": "^6.12.6",
    "beautify": "^0.0.8",
    "date-and-time": "^1.0.1",
    "eslint": "^7.30.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "image-size": "^1.0.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "puppeteer": "^10.1.0",
    "recursive-readdir": "^2.2.2",
    "rollup": "^2.52.8",
    "rollup-plugin-cleanup": "^3.2.1",
